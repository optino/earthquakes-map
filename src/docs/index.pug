        style.
            @media screen and (max-width: 600px) {
                aside {
                    display: none !important;
                }
            }

            a,
            a:visited {
                color: #1565c0;
            }

            a:hover,
            a:focus {
                color: #000000;
            }

            body {
                overflow: auto !important;
            }

            .mui-image.-docs.-logo {
                float: left;
                display: inline-block;
                height: 3rem;
                width: 3rem;
                margin: .5rem 1rem .5rem 0;
            }

            .mui-p.-docs.-hint {
                padding: 1rem;
            }

            .component-preview:after {
                content: '';
                display: table;
                clear: both;
            }

            .component-preview > .mui-button {
                margin: 0 1rem 1rem 0;
            }

            .component-preview .mui-header-logo {
                padding-left: 1rem;
            }

            .component-preview .mui-ribbon-wrapper {
                height: 10rem;
                background: #4caf50;
            }

            .component-preview .mui-ribbon-wrapper + .mui-ribbon-wrapper {
                margin-top: 1rem;
            }


            .aside-navigation {
                padding: 0 1rem;
            }

            .grid-preview .mui-column {
                margin-top: .5rem;
            }

            .grid-preview .mui-column:first-of-type {
                border-right: 2px solid #fff;
            }

            .source-code {
                background: #eeeeee;
                font-family: Menlo, "Bitstream Vera Sans Mono", "DejaVu Sans Mono", Monaco, Consolas, monospace;
                font-size: .7rem;
                padding: 1rem;
                white-space: pre-wrap;
                word-wrap: break-word;
                border-left: 3px solid #9e9e9e;
            }

            .color-preview {
                width: 100%;
                height: 2rem;
                padding: 0 1rem;
                line-height: 2rem;
            }


        script(src='../js/muilessium.min.js?v='    + pkg.version)
        script(src='../js/muilessium-ui.min.js?v=' + pkg.version)
        script(src='../js/main.min.js?v='          + pkg.version)

        script.
            document.addEventListener('DOMContentLoaded', function() {
                var _ = Muilessium.UTILS;

                function initExamples() {
                    _.forEach(document.querySelectorAll('.state .example'), function(example) {
                        var stateClass = _.getAttribute(example, 'data-class'),
                            targetChild = 0;

                        if (example.childNodes[1] && (example.childNodes[1].nodeType !== Node.TEXT_NODE)) {
                            targetChild = 1;
                        }

                        _.addClass(example.childNodes[targetChild], stateClass);
                    });
                }

                initExamples();
            });

