    body
        .mui-scroll-fix

        header.mui-page-header
            .mui-content-container
                .mui-header-logo._left
                    img.mui-image.-docs.-logo.-circle.-js-lazy-load(data-src='../images/favicon/android-chrome-192x192.png' src='data:image/gif;base64,R0lGODlhAQABAIAAAAAAAP///yH5BAEAAAAALAAAAAABAAEAAAIBRAA7' alt='logo')
                    noscript
                        img.mui-image.-docs.-logo.-circle(src='../images/favicon/android-chrome-192x192.png' alt='logo')
                    a.link._right(href='../')
                        h1.heading._bigger-0._line-4r
                            span Earthquakes Map &nbsp;
                            span._smaller-2 v#{ pkg.version }

        .mui-content-container
            aside.mui-column.-s12.-m3._right
                .aside-navigation._smaller-1._line-1-25._separate-3(role='navigation')
                    ul.mui-list.-no-bullets._separate-1
                        li.item: a(href='#overview') Overview
                        li.item: a(href='#coding-conventions') Coding conventions
                    hr._separate-1
                    ul.mui-list.-no-bullets._separate-1
                        each file in files
                            each block in file.blocks
                                li.item: a(href='#' + file.file) #{ block.name }
 
            main.mui-column.-s12.-m9
                .mui-content-container
                    ._separate-3
                        .mui-row
                            a(href='#overview')
                                h2._bigger-2#overview Overview
                        p.mui-p._separate-1 Project description...
                    ._separate-3
                        .mui-row
                            a(href='#coding-conventions')
                                h2._bigger-2#coding-conventions Coding conventions
                        h3._bigger-0._separate-1 JS
                        ol.mui-list._separate-1
                            li.item Always store components in separate directories
                            li.item
                                span Use Muilessium shortcuts in components:
                                ul.mui-list
                                    li.item $ = window.Muilessium
                                    li.item _ = window.Muilessium.UTILS
                            li.item Don't use Muilessium shortcuts in the utilities and modules, use imports instead.
                            li.item Always create wrappers for dependencies and polyfills.
                            li.item Register utilities, dependencies, polyfills, modules and components to the Muilessium using their index files.
                            li.item Use "if" statements and the __DEBUG__ variable to wrap code for debugging.
                        h3._bigger-0._separate-1 LESS
                        ol.mui-list._separate-1
                            li.item Use RSCSS.
                            li.item Only helpers can include the !importnant rules.
                            li.item Component names should be transformed to slug case with global prefix. For example: "MyComponent" (js) -&gt; .ui-my-component (less).
                            li.item Prefer to use the color-scheme for all components.
                            li.item Use constants for standard sizes, animation-functions, times etc.
                            li.item Use normalize-ext for global styles and styles for tags.
                    ._separate-5
                        each file in files
                            div._allow-empty(id=file.file)
                            each block in file.blocks
                                ._separate-5
                                    .mui-row
                                        a(href='#' + file.file)
                                            h4._bigger-1 #{ block.name }
                                    ._smaller-2.-grey-3 #{ file.file }
                                    if block.description
                                        p.mui-p._separate-1 #{ block.description }
                                    if block.component
                                        ._separate-1._smaller-1
                                            span.-green-3: b (!) #{ block.component }
                                            span.-grey-3 &nbsp;- Use Muilessium.get('#{ block.component }', id) to get it.
                                    if block.method
                                        ._separate-1
                                            ul.mui-list._smaller-1
                                                each _method in (Array.isArray(block.method) ? block.method : [block.method])
                                                    li.item
                                                        span #{ _method.name }
                                                        if _method.description
                                                            span.-grey-3 &nbsp;- #{ _method.description }
                                    if block.event
                                        each _event in (Array.isArray(block.event) ? block.event : [block.event])
                                            ._smaller-1
                                                span.-green-3 Event: #{ _event }
                                                span.-grey-3 &nbsp;- Use #{ component }.addEventListener('#{ _event }', (state) => { /* . . . */ }) to subscribe.
                                    if block.requires
                                        each _requires in (Array.isArray(block.requires) ? block.requires : [block.requires])
                                            ._smaller-1.-violet-3 Requires #{ _requires }
                                    if block.markup
                                        ._separate-1
                                            .component-preview._separate-2 !{ block.markup.compiled }
                                            if block.state
                                                each _state in (Array.isArray(block.state) ? block.state : [block.state])
                                                    .state._separate-2
                                                        h5._smaller-1 Variant: #{ _state.name }
                                                        .example._separate-2(data-class=_state.name) !{ block.markup.compiled }
                                            .mui-spoiler.-max-height-20
                                                .title Source code (Pug)
                                                .content
                                                    ._separate-2
                                                        ._smaller-1
                                                            pre.source-code #{ block.markup.example }
                                            .mui-spoiler.-max-height-20
                                                .title Source code (HTML)
                                                .content
                                                    ._separate-2
                                                        ._smaller-1
                                                            pre.source-code #{ block.markup.compiled }

